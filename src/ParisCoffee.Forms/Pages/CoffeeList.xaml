<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ParisCoffee.Forms.CoffeeList"

xmlns:local="clr-namespace:ParisCoffee.Forms;assembly=ParisCoffee.Forms">
	<!-- https://developer.xamarin.com/api/type/Xamarin.Forms.TabbedPage/-->
	<ContentPage Title="All Coffee">
		<ContentPage.Content>
			<local:CoffeeListView ItemsSource="{Binding CoffeeShops}" ItemClickCommand="{Binding SelectedShopCommand}">
				<local:CoffeeListView.ItemTemplate>
					<DataTemplate>
					<TextCell Text="{Binding Name}" Detail="{Binding Address}" />
					</DataTemplate>
				</local:CoffeeListView.ItemTemplate>
			</local:CoffeeListView>
		</ContentPage.Content>
	</ContentPage>
	<ContentPage Title="Favorites">
		<ContentPage.Content>
			<ListView />
		</ContentPage.Content>
	</ContentPage>
</TabbedPage>